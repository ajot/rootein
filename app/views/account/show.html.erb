<div class="max-w-lg mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-8">Account Settings</h1>

  <% if @user.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <ul class="list-disc list-inside text-red-700">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Profile Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4 pb-2 border-b border-gray-200">Profile</h2>
    <%= form_with(model: @user, url: account_path, method: :patch, class: "space-y-4") do |f| %>
      <%= hidden_field_tag :section, "profile" %>
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500", placeholder: "Your name" %>
      </div>
      <div>
        <%= f.label :email_address, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
      </div>
      <div>
        <%= f.label :time_zone, "Time Zone", class: "block text-sm font-medium text-gray-700" %>
        <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
      </div>
      <div>
        <%= f.submit "Save Profile", class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Password Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4 pb-2 border-b border-gray-200">Change Password</h2>
    <%= form_with(model: @user, url: account_path, method: :patch, class: "space-y-4") do |f| %>
      <%= hidden_field_tag :section, "password" %>
      <div>
        <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
      </div>
      <div>
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
      </div>
      <div>
        <%= f.submit "Update Password", class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Notifications Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4 pb-2 border-b border-gray-200">Notifications</h2>
    <%= form_with(model: @user, url: account_path, method: :patch, class: "space-y-4") do |f| %>
      <%= hidden_field_tag :section, "notifications" %>
      <div class="flex items-center gap-2">
        <%= f.check_box :notification_email, class: "rounded border-gray-300 text-green-600 focus:ring-green-500" %>
        <%= f.label :notification_email, "Send me email reminders", class: "text-sm text-gray-700" %>
      </div>
      <div>
        <%= f.submit "Save Preferences", class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
