<div class="max-w-5xl mx-auto mt-6">
  <!-- Add New Rootein link -->
  <div class="text-right mb-4">
    <%= link_to new_rootein_path, class: "text-green-600 hover:text-green-700 font-semibold" do %>
      <span class="text-lg">+</span> Add New Rootein
    <% end %>
  </div>

  <!-- Greeting -->
  <div class="mb-8">
    <h1 class="text-4xl">
      <span class="text-gray-800"><%= @greeting_word %>!</span>
      <span class="text-red-500"><%= @name %></span>
    </h1>
    <p class="text-sm text-gray-500">That's welcome in <%= @greeting_language %></p>
  </div>

  <!-- Three columns -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Slacking -->
    <div class="rounded-lg overflow-hidden border border-gray-300">
      <div class="bg-gray-900 text-white text-center py-2 font-semibold text-sm">You are slacking on</div>
      <div class="bg-gradient-to-b from-red-200 to-red-400 p-4 min-h-[120px]">
        <% if @slacking.any? %>
          <ul class="space-y-3">
            <% @slacking.each do |rootein| %>
              <li class="flex items-center gap-3">
                <%= streak_badge(rootein) %>
                <%= link_to rootein.name, rootein_path(rootein), class: "text-gray-800 hover:underline font-medium" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-700 text-sm italic text-center mt-6">Nothing! You're on fire!</p>
        <% end %>
      </div>
    </div>

    <!-- On Target -->
    <div class="rounded-lg overflow-hidden border border-gray-300">
      <div class="bg-gray-900 text-white text-center py-2 font-semibold text-sm">You are on target on</div>
      <div class="bg-gradient-to-b from-green-200 to-green-400 p-4 min-h-[120px]">
        <% if @on_target.any? %>
          <ul class="space-y-3">
            <% @on_target.each do |rootein| %>
              <li class="flex items-center gap-3">
                <%= streak_badge(rootein) %>
                <%= link_to rootein.name, rootein_path(rootein), class: "text-gray-800 hover:underline font-medium" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-700 text-sm italic text-center mt-6">Complete a rootein today to get started!</p>
        <% end %>
      </div>
    </div>

    <!-- Tip -->
    <div class="rounded-lg overflow-hidden border border-gray-300">
      <div class="bg-gray-900 text-white text-center py-2 font-semibold text-sm">Rootein Tip</div>
      <div class="bg-gradient-to-b from-blue-200 to-blue-400 p-4 min-h-[120px]">
        <% if @tip %>
          <p class="text-gray-800 mt-2">"<%= @tip.body %>"</p>
        <% else %>
          <p class="text-gray-700 text-sm italic text-center mt-6">No tips yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
