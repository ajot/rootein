<div class="max-w-sm mx-auto mt-20">
  <h1 class="text-2xl font-bold mb-6 text-center">Create your account</h1>

  <% if @user.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <ul class="list-disc list-inside text-red-700">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, url: registration_path, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500", placeholder: "Your name" %>
    </div>
    <div>
      <%= f.label :email_address, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500", required: true %>
    </div>
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500", required: true %>
    </div>
    <div>
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500", required: true %>
    </div>
    <div>
      <%= f.submit "Sign Up", class: "w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 cursor-pointer" %>
    </div>
  <% end %>

  <p class="text-center text-sm text-gray-500 mt-6">
    Already have an account? <%= link_to "Log in", new_session_path, class: "text-green-600 hover:underline" %>
  </p>
</div>
