<%= form_with(model: rootein, class: "space-y-4") do |f| %>
  <% if rootein.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h2 class="text-red-800 font-semibold">Please fix the following:</h2>
      <ul class="list-disc list-inside text-red-700 mt-2">
        <% rootein.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500", placeholder: "e.g. Exercise daily" %>
  </div>

  <div class="flex items-center gap-2">
    <%= f.check_box :active, class: "rounded border-gray-300 text-green-600 focus:ring-green-500" %>
    <%= f.label :active, "Active", class: "text-sm text-gray-700" %>
  </div>

  <div>
    <%= f.label :reminder_time, "Reminder time (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.time_field :reminder_time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
  </div>

  <div class="flex items-center gap-2">
    <%= f.check_box :remind_on_slack, class: "rounded border-gray-300 text-green-600 focus:ring-green-500" %>
    <%= f.label :remind_on_slack, "Remind me when slacking", class: "text-sm text-gray-700" %>
  </div>

  <div>
    <%= f.submit class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 cursor-pointer" %>
  </div>
<% end %>
