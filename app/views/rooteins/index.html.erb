<div class="max-w-5xl mx-auto mt-6">
  <!-- Add New Rootein link -->
  <div class="text-right mb-4">
    <%= link_to new_rootein_path, class: "text-green-600 hover:text-green-700 font-semibold" do %>
      <span class="text-lg">+</span> Add New Rootein
    <% end %>
  </div>

  <% if @rooteins.any? %>
    <table class="w-full bg-white rounded-lg overflow-hidden border border-gray-200">
      <thead>
        <tr class="text-sm text-gray-500">
          <th class="py-2 px-4"></th>
          <th class="py-2 px-4 text-left"></th>
          <th class="py-2 px-4 text-center italic">Active</th>
          <th class="py-2 px-4 text-center">Reminder</th>
          <th class="py-2 px-4"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% @rooteins.each_with_index do |rootein, i| %>
          <tr class="<%= i.even? ? 'bg-white' : 'bg-gray-50' %> hover:bg-gray-100">
            <td class="py-3 px-4"><%= streak_badge(rootein) %></td>
            <td class="py-3 px-4">
              <%= link_to rootein.name, rootein_path(rootein), class: "text-blue-600 hover:underline font-medium" %>
              <div class="text-xs text-gray-400">Started on: <%= rootein.created_at.strftime("%d %b %Y") %></div>
            </td>
            <td class="py-3 px-4 text-center">
              <% if rootein.active? %>
                <span class="text-green-500">&#10003;</span>
              <% else %>
                <span class="text-gray-300">&#10005;</span>
              <% end %>
            </td>
            <td class="py-3 px-4 text-center text-sm text-gray-600">
              <% if rootein.reminder_time.present? %>
                <%= rootein.reminder_time.strftime("%I:%M %p") %>
              <% else %>
                <%= link_to "Set reminder", edit_rootein_path(rootein), class: "text-blue-500 hover:underline text-xs" %>
              <% end %>
            </td>
            <td class="py-3 px-4 text-right text-xs">
              <%= link_to "Edit", edit_rootein_path(rootein), class: "text-blue-500 hover:underline" %>
              <span class="text-gray-300">|</span>
              <%= button_to "Delete", rootein_path(rootein), method: :delete, class: "text-red-500 hover:underline cursor-pointer", data: { turbo_confirm: "Are you sure? This will delete all completions too." } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="bg-white rounded-lg border border-gray-200 p-10 text-center">
      <p class="text-gray-500">No rooteins yet. Create your first one!</p>
    </div>
  <% end %>
</div>
