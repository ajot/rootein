#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Prepare database â€” handles both direct and sh -c wrapped invocations
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare
  ./bin/rails db:migrate:queue db:migrate:cache db:migrate:cable 2>/dev/null || true
elif echo "$@" | grep -q "rails server"; then
  ./bin/rails db:prepare
  ./bin/rails db:migrate:queue db:migrate:cache db:migrate:cable 2>/dev/null || true
fi

exec "${@}"
